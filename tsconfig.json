{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "declaration": true,
    "outDir": "dist",
    "typeRoots": [
      "./node_modules/@types",
      "./typings"
    ],
    "noEmit": true
  },
  "exclude": [
    "node_modules",
    "bin",
    "src/pages"
  ],
  "include": [
    "src",
    "cli"
  ]
}